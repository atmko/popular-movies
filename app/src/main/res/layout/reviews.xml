<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/detail_review_card_width"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/detail_layout_margin"
    android:layout_marginLeft="@dimen/detail_layout_margin"
    android:layout_marginBottom="@dimen/detail_layout_margin"
    app:cardCornerRadius="@dimen/detail_review_card_corner_radius"
    app:cardBackgroundColor="@color/detail_review_card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/detail_review_item_layout_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/authorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="placeholder" />

        <TextView
            android:id="@+id/contentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_review_body_margin_top"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="italic"
            tools:text="placeholder" />

    </LinearLayout>

</android.support.v7.widget.CardView>



