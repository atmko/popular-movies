<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/detail_layout_margin"
    android:layout_marginStart="@dimen/detail_layout_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/videoImageView"
        android:layout_width="@dimen/detail_video_image_width"
        android:layout_height="@dimen/detail_video_image_height"
        android:contentDescription="@string/poster_description" />

    <TextView
        android:id="@+id/videoTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/standard_margin"
        android:fontFamily="sans-serif-medium"
        tools:text="video type" />

</LinearLayout>





